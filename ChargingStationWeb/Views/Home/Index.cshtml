@model ChargingStationWeb.Models.ViewModel.IndexViewModel
@{
    ViewData["Title"] = "Charging Station";
}

<section class="flex-fill pt-5">
    <div class="row g-0 h-100">
        <!-- Map -->
        <div class="col-9">
            <div id="map"></div>
        </div>
        <!-- Infomation -->
        <div class="col-3 pt-5 p-3">
            <div>
                <label for = "typeahead" class="h2 text-left">Hệ thống trạm sạc</label>
                <div class="input-group mb-3">
                    <input id = "typeahead" type="search" class="form-control" >
                </div>
            </div>

            <div>   
                <label for ="province_selection" class="h2 text-left">Khu vực tìm kiếm</label>
                <select id="province_selection" class="form-select" >
                    <option value="tỉnh thành">Tỉnh thành</option>
                </select>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/Home/index.js"></script>   
}
@{
    ViewData["Title"] = "Charging Station";
}

<div class="p-4 border rounded backgroundWhite">
    <div class="row  text-center">
        <div class="col-9">
            <h2 class="text-primary">Charging Station List</h2>
        </div>
        <div class="col-3">
            <a asp-action="Upsert" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New Charging Station</a>
        </div>
    </div>
    <br />
    <div style="background-color:#cde8e2" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered text-truncate" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>Name</th>
                    <th>Province</th>
                    <th>Address</th>
                    <th>TotalChargerPorts</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
        <script src="~/js/chargingStation.js"></script>
}
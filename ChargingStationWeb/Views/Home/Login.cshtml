@model ChargingStationWeb.Models.User
@{
    ViewData["Title"] = "Login";
}
<section class="flex-fill pt-5">
<div class="justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-4 pt-5">
                <div class="card bg-white">
                    <div class="card-body p-5">
                        <h2 class="fw-bold mb-2 text-uppercase text-center">Login</h2>
                        <p class=" mb-3">Please enter your username and password!</p>
                        <form class="mb-3 mt-md-4" method="post">
                            <div class="mb-3">
                            <label for="username" class="form-label ">Username</label>
                                <input asp-for="Username" type="text" class="form-control" id = "username" placeholder="username" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label ">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="********" required>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-outline-dark" type="submit">Login</button>
                            </div>
                        </form>                      
                        <div class="p-2">
                            <p class="mb-0 text-center">Don't have an account?   <a class="text-primary fw-bold" asp-controller="Home" asp-action="Register">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<</section>
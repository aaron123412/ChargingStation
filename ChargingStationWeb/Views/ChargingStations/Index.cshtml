@{
    ViewData["Title"] = "Charging Station";
}

<section class="flex-fill pt-5">
<div class="container">
    <div class="p-4 rounded">
        <div class="row align-items-center">
            <div class="col-lg-9 col-md-8 col-12">
                <h2 class="text-primary mb-0">Charging Station List</h2>
            </div>
            <div class="col-lg-3 col-md-4 col-12 text-md-end text-center mb-3 mb-md-0">
                <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Create New Charging Station</a>
            </div>
        </div>
        <br>
        <div class="p-3 rounded">
            <table id="tblData" class="table table-striped table-bordered table-light">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Province</th>
                        <th>Address</th>
                        <th>Total Charger Ports</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div> 
</section>
@section Scripts{
        <script src="~/js/ChargingStations/index.js"></script>
}